<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Products.Pages.AccessibilityPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AccessibilityPage">
    <ScrollView BackgroundColor="#ddd7c4">
        <VerticalStackLayout Padding="0,0,0,30" Spacing="10">

            <!--  Back Button  -->
            <Button
                BackgroundColor="Transparent"
                Clicked="OnBackButtonClicked"
                CornerRadius="25"
                FontSize="70"
                HorizontalOptions="Start"
                Text="←"
                TextColor="Black"
                VerticalOptions="Center" />

            <!--  Header Section  -->
            <Grid
                ColumnDefinitions="Auto,Auto,Auto,Auto,Auto"
                ColumnSpacing="20"
                HorizontalOptions="Center">
                <Label
                    Grid.Column="0"
                    FontAttributes="Bold"
                    FontFamily="InstrumentSerif"
                    FontSize="{OnPlatform Android=30,
                                          Default=100}"
                    Text="ACCESSIBILITY"
                    TextColor="Orange" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontFamily="InstrumentSerif"
                    FontSize="{OnPlatform Android=30,
                                          Default=100}"
                    Text="OF"
                    TextColor="Orange" />
                <Image
                    Grid.Column="4"
                    Aspect="AspectFill"
                    HeightRequest="{OnPlatform Android=80,
                                               Default=200}"
                    Source="newlogo.png"
                    WidthRequest="{OnPlatform Android=80,
                                              Default=200}" />
            </Grid>
            <Label
                FontAttributes="Bold"
                FontFamily="InstrumentSerif"
                FontSize="30"
                HorizontalOptions="Center"
                Text="(LAST   UPDATED:   APRIL   1   2025)"
                TextColor="Orange" />
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <Label
                    FontAttributes="Bold"
                    FontFamily="InstrumentSerif"
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    Text="Shuatik is committed to ensuring digital accessibility for all users, including individuals with disabilities. We strive to make our web application accessible and user-friendly across both desktop and mobile devices."
                    TextColor="#ffbd59" />
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Accessibility Features"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• Screen Reader Compatibility   –   The App is designed to work with popular screen readers for users with visual impairments."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• High Contrast Mode   –   Support for high-contrast settings to improve readability."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• Keyboard Navigation   –   Users can navigate the App using a keyboard without requiring a mouse."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• Text Scaling   –   Adjustable text sizes to accommodate different visual needs."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• Alternative Text   –   Images and non-text elements include descriptions for better accessibility."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Ongoing Improvements"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        HorizontalTextAlignment="Center"
                        Text="We are continuously working to enhance the accessibility of our App. Our team follows best practices, including compliance with WCAG (Web Content Accessibility Guidelines) standards, to ensure a more inclusive experience."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Third - Party Content"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        HorizontalTextAlignment="Center"
                        Text="While we strive to make all areas of the App accessible, some third-party content or integrations may not fully meet accessibility standards. We encourage users to report any accessibility concerns they encounter."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Feedback and Support"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        HorizontalTextAlignment="Center"
                        Text="If you experience any accessibility issues or have suggestions for improvement, please contact us at. We value your feedback and are dedicated to making Shuatik as accessible as possible for all users.  Thank you for using Shuatik!"
                        TextColor="#ffbd59" />
                    <Button
                        BackgroundColor="Orange"
                        Clicked="OnContactUsClicked"
                        FontFamily="InstrumentSerif"
                        Text="CONTACT US"
                        TextColor="Black"
                        WidthRequest="200" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>