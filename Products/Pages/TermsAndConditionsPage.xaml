<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Products.Pages.TermsAndConditionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="TermsAndConditionsPage"
    NavigationPage.HasNavigationBar="False">

    <ScrollView BackgroundColor="#ddd7c4">
        <VerticalStackLayout Padding="0,0,0,30" Spacing="10">

            <!--  Back Button  -->
            <Button
                BackgroundColor="Transparent"
                Clicked="OnBackButtonClicked"
                CornerRadius="25"
                FontSize="70"
                HorizontalOptions="Start"
                Text="←"
                TextColor="Black"
                VerticalOptions="Center" />

            <!--  Header Section  -->
            <Grid
                ColumnDefinitions="Auto,Auto,Auto,Auto,Auto"
                ColumnSpacing="{OnPlatform Android=10,
                                           Default=20}"
                HorizontalOptions="Center">
                <Label
                    Grid.Column="0"
                    FontAttributes="Bold"
                    FontFamily="InstrumentSerif"
                    FontSize="{OnPlatform Android=20,
                                          Default=100}"
                    Text="TERMS"
                    TextColor="Orange" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontFamily="InstrumentSerif"
                    FontSize="{OnPlatform Android=20,
                                          Default=100}"
                    Text="AND"
                    TextColor="Orange" />
                <Label
                    Grid.Column="2"
                    FontAttributes="Bold"
                    FontFamily="InstrumentSerif"
                    FontSize="{OnPlatform Android=20,
                                          Default=100}"
                    Text="CONDITIONS"
                    TextColor="Orange" />
                <Label
                    Grid.Column="3"
                    FontAttributes="Bold"
                    FontFamily="InstrumentSerif"
                    FontSize="{OnPlatform Android=20,
                                          Default=100}"
                    Text="OF"
                    TextColor="Orange" />
                <Image
                    Grid.Column="4"
                    Aspect="AspectFill"
                    HeightRequest="{OnPlatform Android=50,
                                               Default=200}"
                    Source="newlogo.png"
                    WidthRequest="{OnPlatform Android=50,
                                              Default=200}" />
            </Grid>
            <Label
                FontAttributes="Bold"
                FontFamily="InstrumentSerif"
                FontSize="30"
                HorizontalOptions="Center"
                Text="(LAST   UPDATED:   APRIL   1   2025)"
                TextColor="Orange" />
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <Label
                    FontAttributes="Bold"
                    FontFamily="InstrumentSerif"
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    Text="Welcome to Shuatik! These Terms and Conditions (Terms) govern your use of the Shuatik .NET MAUI application (the App), which allows users to order our exclusive food products. By accessing or using the App, you agree to be bound by these Terms. If you do not agree, please do not use the App."
                    TextColor="#ffbd59" />
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Acceptance of Terms"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        HorizontalTextAlignment="Center"
                        Text="By downloading, installing, or using the App, you acknowledge that you have read, understood, and agree to abide by these Terms."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Use of the App"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• You must be at least 13 years old to use the App."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• You agree to use the App only for lawful purposes and in compliance with all applicable laws and regulations."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• You may not misuse, exploit, or interfere with the functionality of the App."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• The App facilitates ordering exclusively from our limited selection of three food products, and you are responsible for verifying your order details before submission."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Orders and Payments"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• By placing an order through the App, you agree to pay the total amount displayed at checkout, including taxes and delivery fees."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• Payment must be made using the available payment options in the App."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• Orders may not be canceled or modified after they have been confirmed."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• We strive to provide timely and accurate order fulfillment, but we are not liable for delays due to unforeseen circumstances."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Intellectual Property"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• All content, trademarks, logos, and intellectual property related to Shuatik are owned by us or our licensors."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• You may not copy, distribute, modify, or create derivative works from any part of the App without our prior written consent."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Privacy Policy"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        HorizontalTextAlignment="Center"
                        Text="Your use of the App is also governed by our Privacy Policy, which explains how we collect, use, and protect your personal information."
                        TextColor="#ffbd59" />
                    <Button
                        BackgroundColor="Orange"
                        Clicked="OnPrivacyClicked"
                        FontFamily="InstrumentSerif"
                        Text="PRIVACY POLICY"
                        TextColor="Black"
                        WidthRequest="200" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Limitation of Liability"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• The App is provided as is without warranties of any kind."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• We shall not be liable for any damages arising from your use of the App, including but not limited to direct, indirect, incidental, or consequential damages."
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        Text="• We are responsible only for the quality, preparation, and delivery of our three food products. "
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Modifications to Terms"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        HorizontalTextAlignment="Center"
                        Text="We reserve the right to modify these Terms at any time. Continued use of the App after changes are made constitutes acceptance of the updated Terms."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Termination"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        HorizontalTextAlignment="Center"
                        Text="We may terminate or suspend your access to the App at any time if you violate these Terms."
                        TextColor="#ffbd59" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="InstrumentSerif"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Text="Contact Information"
                        TextColor="#ffbd59" />
                    <Label
                        FontFamily="InstrumentSerif"
                        HorizontalTextAlignment="Center"
                        Text="If you have any questions about these Terms, please contact us at."
                        TextColor="#ffbd59" />
                    <Button
                        BackgroundColor="Orange"
                        Clicked="OnContactUsClicked"
                        FontFamily="InstrumentSerif"
                        Text="CONTACT US"
                        TextColor="Black"
                        WidthRequest="200" />
                </VerticalStackLayout>
            </Frame>
            <Frame
                Margin="{OnPlatform Android='10,0,10,0',
                                    Default='100,0,100,0'}"
                Padding="10"
                BackgroundColor="#541414"
                BorderColor="#ffbd59" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>